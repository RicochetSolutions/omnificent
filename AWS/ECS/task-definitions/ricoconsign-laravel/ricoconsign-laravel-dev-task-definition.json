{
  "family": "ricoconsign-laravel-dev-task-definition",
  "volumes": [
    {
      "host": {
        "sourcePath": "/home/ec2-user/ricochet-web-settings/dev/ricoconsign-laravel/.env"
      },
      "name": "RicoconsignLaravelVolume"
    }
  ],
  "containerDefinitions": [
    {
      "essential": true,
      "image": "ricochetsolutions/ricoconsign-laravel:%REVISION%",
      "logConfiguration": {
        "logDriver": "json-file",
        "options": {
          "max-size": "50m"
        }
      },
      "memory": 100,
      "mountPoints": [
        {
          "sourceVolume": "RicoconsignLaravelVolume",
          "containerPath": "/var/www/html/.env"
        }
      ],
      "name": "RicoconsignLaravel"
    },
    {
      "essential": true,
      "image": "ricochetsolutions/ricoconsign-laravel-nginx:latest",
      "links": [
        "RicoconsignLaravelPhpFpm"
      ],
      "logConfiguration": {
        "logDriver": "json-file",
        "options": {
          "max-size": "50m"
        }
      },
      "memory": 200,
      "name": "RicoconsignLaravelNginx",
      "portMappings": [
        {
          "hostPort": 50004,
          "containerPort": 80
        }
      ],
      "volumesFrom": [
        {
          "sourceContainer": "RicoconsignLaravel"
        }
      ]
    },
    {
      "essential": true,
      "image": "ricochetsolutions/ricoconsign-laravel-php-fpm:latest",
      "logConfiguration": {
        "logDriver": "json-file",
        "options": {
          "max-size": "50m"
        }
      },
      "memory": 800,
      "name": "RicoconsignLaravelPhpFpm",
      "volumesFrom": [
        {
          "sourceContainer": "RicoconsignLaravel"
        }
      ]
    }
  ]
}