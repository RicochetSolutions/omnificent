{
  "family": "ricoconsign-pos-production-task-definition",
  "volumes": [
    {
      "host": {
        "sourcePath": "/home/ec2-user/ricoconsign-pos-web-settings/production/ricoconsign-pos-codeigniter/public/application/config/database.php"
      },
      "name": "VolumeRicoconsignPosDatabase"
    },
    {
      "host": {
        "sourcePath": "/home/ec2-user/ricoconsign-pos-web-settings/production/ricoconsign-pos-codeigniter/public/application/config/s3.php"
      },
      "name": "VolumeRicoconsignPosS3"
    }
  ],
  "containerDefinitions": [
    {
      "essential": true,
      "image": "ricochetsolutions/ricoconsign-pos-apache-php:latest",
      "logConfiguration": {
        "logDriver": "json-file",
        "options": {
          "max-size": "50m"
        }
      },
      "memory": 200,
      "name": "RicoconsignPosApachePhp",
      "portMappings": [
        {
          "hostPort": 60000,
          "containerPort": 80
        },
        {
          "hostPort": 60001,
          "containerPort": 443
        }
      ],
      "volumesFrom": [
        {
          "sourceContainer": "RicoconsignPosCodeIgniter"
        }
      ]
    },
    {
      "essential": true,
      "image": "ricochetsolutions/ricoconsign-pos-codeigniter:%REVISION%",
      "logConfiguration": {
        "logDriver": "json-file",
        "options": {
          "max-size": "50m"
        }
      },
      "memory": 100,
      "mountPoints": [
        {
          "sourceVolume": "VolumeRicoconsignPosDatabase",
          "containerPath": "/var/www/html/public/application/config/database.php"
        },
        {
          "sourceVolume": "VolumeRicoconsignPosS3",
          "containerPath": "/var/www/html/public/application/config/s3.php"
        }
      ],
      "name": "RicoconsignPosCodeIgniter"
    }
  ]
}